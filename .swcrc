{
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@db/*": ["./db/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "externalHelpers": true
  },
  "minify": false
}
