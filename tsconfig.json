{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@db/*": ["./db/*"],
      "@scripts/*": ["./scripts/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
